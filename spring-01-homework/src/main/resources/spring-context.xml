<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    	<property name="locations" value="classpath:/application.properties"/>
	</bean>

	<bean id="userInterfaceService" class="ru.gurkin.spring.usertesting.service.impl.UserInterfaceServiceImpl"/>
	<bean id="testServiceDao" class="ru.gurkin.spring.usertesting.dao.impl.TestServiceTestDaoImpl"/>
	<bean id="imaginationTestServiceDao" class="ru.gurkin.spring.usertesting.dao.impl.CSVImaginationTestServiceDaoImpl">
		<constructor-arg name="fileName" value="${resources.test-file-name}"/>
	</bean>
    
    <bean id="userTestingService" class="ru.gurkin.spring.usertesting.service.impl.UserTestingServiceImpl">
        <constructor-arg name="userInterfaceService" ref="userInterfaceService"/>
        <constructor-arg name="testService" ref="imaginationTestServiceDao"/>
    </bean>
</beans>
